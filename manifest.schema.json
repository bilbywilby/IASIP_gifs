{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["filename", "tags", "description"],
    "properties": {
      "filename": {
        "type": "string",
        "pattern": "^[a-z0-9\\-]+\\.gif$"
      },
      "tags": {
        "type": "array",
        "minItems": 1,
        "items": { "type": "string", "minLength": 1 }
      },
      "description": { "type": "string", "minLength": 10, "maxLength": 200 }
    },
    "additionalProperties": false
  }
}
